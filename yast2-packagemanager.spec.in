@HEADER-COMMENT@

PreReq:    	%fillup_prereq
Requires:	rpm >= 4.1.1

@HEADER@
BuildRequires:	curl-devel dejagnu doxygen gcc-c++ liby2util-devel openslp-devel readline-devel rpm-devel yast2-devtools
Summary:	-

%description
-

%package devel
Group:          Development/Libraries
Summary:	-

Requires:	rpm-devel >= 4.1.1 liby2util-devel curl-devel openslp-devel openssl-devel libxml2-devel

%description devel
-

@PREP@

%build
%{prefix}/bin/y2tool y2autoconf
%{prefix}/bin/y2tool y2automake
autoreconf --force --install

export CFLAGS="$RPM_OPT_FLAGS -DNDEBUG"
export CXXFLAGS="$RPM_OPT_FLAGS -DNDEBUG"

%{?suse_update_config:%{suse_update_config -f}}
./configure --libdir=%{_libdir} --prefix=%{prefix} --mandir=%{_mandir} \
	--enable-static --disable-shared
make %{?jobs:-j%jobs}

%install
make install DESTDIR="$RPM_BUILD_ROOT"
rm -rf %{buildroot}%{_libdir}/*.la
rm -rf %{buildroot}/usr/bin
rm -rf %{buildroot}/usr/share
rm -rf %{buildroot}/var
rm -rf %{buildroot}/etc
rm -rf %{buildroot}/usr/lib/YaST2
rm -rf %{buildroot}@docdir|

@CLEAN@

%files devel
%defattr(-,root,root)
%{_libdir}/liby2pm.a
@includedir@
